#: set s dp(150)

<CanvasTab@TabbedPanel>:
    do_default_tab : False
    TabbedPanelItem:
        text: "1"
        CanvasExample1:
    TabbedPanelItem:
        text: "2"
        CanvasExample2:
    TabbedPanelItem:
        text: "3"
        CanvasExample3:
    TabbedPanelItem:
        text: "4"
        CanvasExample4:
    TabbedPanelItem:
        text: "5"
        CanvasExample5:
    TabbedPanelItem:
        text: "6"
        CanvasExample6:
    TabbedPanelItem:
        text: "7"
        CanvasExample7:

<CanvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s
        Ellipse:
            pos: dp(150), dp(200)
            size: s, s/2
        Line:
            points: (0, 0, self.width/4, 100, self.width/2, 3, self.width*3/4, 100, self.width, 0)
            width: dp(2)

<CanvasExample2>:
    canvas:
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: dp(2)
        Line:
            points: (self.width/2, self.height, self.width/2, 0)
            width: dp(2)

<CanvasExample3>:
    canvas:
        Color:
            rgba: 1,0,0,.2
        Line:
            circle: (200, 200, 100) # center_x, center_y, rayon
            width: dp(2)
        Line:
            ellipse: (500, 300, 100, 200) # center_x, center_y, rayon_x, rayon_y
            width: dp(2)
        Color:
            rgba: 0,0,1,1
        Line:
            rectangle : (200, 400, dp(40), dp(100))
            width: dp(2)

<CanvasExample4>:
    BoxLayout:
        orientation: "vertical"
        width: 200
        Button:
            text: "Reset"
            width: 200
            on_press: root.on_button_reset()
        Button:
            text:"Déplace le rectangle"
            width: 200
            on_press: root.on_button_press()

<CanvasExample6>:
    BoxLayout:
        size: root.size
        Widget:
            canvas:
                Color :
                    rgb: 0, 1, 0
                Rectangle:
                    size: self.size
        Widget:
            canvas:
                Color :
                    rgb: 0, 0, 1
                Rectangle:
                    size: self.size
                    # pos: self.pos ou RelativeLayout qui déplace les coordonnées du canvas par défaut 0:0

<CanvasExample7>:
    orientation: "horizontal"
    RelativeLayout:
        canvas:
            Color :
                rgb: 0, 0, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color :
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color :
                rgb: 1, 0, 0
            Rectangle:
                size: self.size